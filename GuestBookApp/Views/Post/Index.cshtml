@model IEnumerable<GuestBookApp.Models.Post>

@{
    ViewBag.Title = "GuestBook Entries";
    Layout = "_Layout";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12">
            <h2 class="text-black-50">Guest Book Entries</h2>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped w-100 mt-3">
            <thead>
            <tr>
                <th>Posts:</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <td>@post.User.Name</td>
                    <td>@post.User.Email</td>
                    <td>@post.DateTime</td>
                    <td>@post.Message</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-danger text-center">No posts here :(</p>
    }
</div>