@model IEnumerable<GuestBookApp.Models.Post>

@{
    ViewBag.Title = "GuestBook Entries";
    Layout = "_Layout";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12">
            <h2 class="text-black-50">Guest Book Entries</h2>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        @foreach (var post in Model)
        {
            await Html.RenderPartialAsync("_SinglePost", post);
        }
    }
    else
    {
        <p class="text-danger text-center">No posts here :(</p>
    }
</div>